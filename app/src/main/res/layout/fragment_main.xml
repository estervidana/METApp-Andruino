<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Grupo1.MET.metapp_andruino.view.activities.MainActivity">


    <LinearLayout
        android:id="@+id/activity_main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_title"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/menu_title"
            android:layout_marginBottom="@dimen/menu_title_margins"
            android:layout_gravity="center"/>

        <ImageButton
            android:contentDescription="@string/ctrl_remoto_content_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_ctrl"
            android:id="@+id/bCtrlRemoto"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tCtrlRemoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_menu_ctrl_remoto_text"
            android:textColor="@color/colorSecondaryText"/>
        <View
            android:layout_marginBottom="@dimen/menu_margins"
            android:layout_marginTop="@dimen/menu_margins"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondaryDark"/>
        <ImageButton
            android:contentDescription="@string/ctrl_remoto_content_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_lab"
            android:id="@+id/bLaberinto"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/tLaberinto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/main_menu_labyrinth_text"
            android:textColor="@color/colorSecondaryText" />
        <View
            android:layout_marginBottom="@dimen/menu_margins"
            android:layout_marginTop="@dimen/menu_margins"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondaryDark"/>
        <ImageButton
            android:contentDescription="@string/ctrl_remoto_content_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_accel"
            android:id="@+id/bAcelerometro" />
        <TextView
            android:id="@+id/tAcelerometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/main_menu_accel_text"
            android:textColor="@color/colorSecondaryText"/>
        <View
            android:layout_marginBottom="@dimen/menu_margins"
            android:layout_marginTop="@dimen/menu_margins"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondaryDark"/>
        <ImageButton
            android:contentDescription="@string/ctrl_remoto_content_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_log"
            android:id="@+id/bLogCom" />
        <TextView
            android:id="@+id/tLogCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/main_menu_log_comm_text"
            android:textColor="@color/colorSecondaryText"/>
    </LinearLayout>
</FrameLayout>
